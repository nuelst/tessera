# =================================================================
# TESSERA - Time Capsule API Environment Variables
# =================================================================
# Copy this file to .env and update the values

# -----------------------------------------------------------------
# üåê SERVER CONFIGURATION
# -----------------------------------------------------------------
# Port where the server will run
PORT=3000

# -----------------------------------------------------------------
# üîê JWT AUTHENTICATION
# -----------------------------------------------------------------
# Secret key for JWT token generation (use a strong, random string)
# Generate with: openssl rand -hex 64
SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production

# -----------------------------------------------------------------
# üìß EMAIL CONFIGURATION
# -----------------------------------------------------------------
# SMTP configuration for sending time capsule emails
MAILER_USER=your-email@gmail.com
MAILER_PASS=your-app-specific-password

# Email provider examples:
# Gmail: smtp.gmail.com:587
# Outlook: smtp-mail.outlook.com:587
# SendGrid: smtp.sendgrid.net:587
MAILER_HOST=smtp.gmail.com
MAILER_PORT=587

# -----------------------------------------------------------------
# üóÉÔ∏è DATABASE CONFIGURATION
# -----------------------------------------------------------------
# Database connection URL
# For SQLite (default): file:./dev.db
# For PostgreSQL: postgresql://username:password@localhost:5432/tessera
# For MySQL: mysql://username:password@localhost:3306/tessera
DATABASE_URL="file:./dev.db"

# -----------------------------------------------------------------
# üê≥ DOCKER POSTGRES (if using PostgreSQL)
# -----------------------------------------------------------------
# These match the compose.yml file
POSTGRES_DB=tessera
POSTGRES_USER=tessera
POSTGRES_PASSWORD=senha123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# -----------------------------------------------------------------
# üîß DEVELOPMENT SETTINGS
# -----------------------------------------------------------------
# Environment (development, production, test)
NODE_ENV=development

# Enable debug logging
DEBUG=true

# -----------------------------------------------------------------
# üì± FRONTEND CONFIGURATION (if needed)
# -----------------------------------------------------------------
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------
# üèóÔ∏è BUILD CONFIGURATION
# -----------------------------------------------------------------
# Prisma client generation path
PRISMA_GENERATE_DATAPROXY=false 